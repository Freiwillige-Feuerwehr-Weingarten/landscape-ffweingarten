---
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:latest
    container_name: heimdall
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Berlin
    volumes:
      - heimdall_config:/config
    ports:
      - 8095:80
    restart: unless-stopped
volumes:
  heimdall_config: